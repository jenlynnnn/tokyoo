package Exam;

import java.util.Random;
import java.util.Scanner;

public class day3Ex01 {

	public static void main(String[] args) {
		// #1
		System.out.println("총 치킨 조각 수 : " + chicken(8));
		
		// #2
		System.out.println("오늘 하루 마신 카페인량 : " + coffee(80));
		
		// #3
		System.out.println("삼각김밥 총 칼로리 : " + samgak(200));
		
		
		// #4
		System.out.println("이름 두개를 입력하세요. : ");
		Scanner sc = new Scanner(System.in);
		
		String str1 = sc.nextLine();
		String str2 = sc.nextLine();
		
		System.out.println("연애 성공확률 : " + love(str1, str2));
		
		// #5
		System.out.println(food());
		
		// #6
		System.out.println("1~100 중 점수를 입력하세요");
		int score = sc.nextInt();
		System.out.println(grade(score));
	}

	public static int chicken(int jo) {
		System.out.println("치킨 수를 입력하세요. : ");
		Scanner sc = new Scanner(System.in);
		return sc.nextInt() * jo;
	}
	
	public static int coffee(int ca) {
		System.out.println("오늘 마신 커피 수를 입력하세요. : ");
		Scanner sc = new Scanner(System.in);
		return sc.nextInt() * ca;
	}
	
	public static int samgak(int caㅣ) {
		System.out.println("먹은 삼각김밥 수를 입력하세요 : ");
		Scanner sc = new Scanner(System.in);
		return sc.nextInt() * caㅣ;
	}
	
	public static int love(String str1, String str2) {
		Random ran = new Random();
		return ran.nextInt(100);
	}
	
	public static String food() {
		String[] foodStr = {"라면", "김밥", "샐러드"};
		
		Random rand = new Random();
		return foodStr[rand.nextInt(1)];
	}
	
	private static String grade(int score) {
		switch (score) {
		case value: {
			
			yield type;
		}
		default:
			throw new IllegalArgumentException("Unexpected value: " + score);
		}
		return null;
	}
	
	

}
