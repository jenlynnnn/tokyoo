package ch2;

import java.util.Scanner;

/*
 * for 반복문
 * 정해진 조건만큼 반복
 * 
 * for(초기값; 조건식; 증강값) {
 * 	실행문;
 * }
 * 
 * 
 * */

public class ForEx1 {

	public static void main(String[] args) {

		// 1 ~ 5까지 출력
		// i++ : 후위증가 연산자
		// ++i : 전위증가 연산자
		// --i : 전위감소 연산자
		for (int i = 1; i <= 5; i++) {
			System.out.println(i);
		}

		System.out.println("===========");

		for (int i = 0; i < 3; i++) {
			System.out.println("home");
		}

		System.out.println("===========");
		// 10 ~ 1 까지 거꾸로 출력
		for (int i = 10; i >= 1; i--) {
			System.out.println(i);
		}

		System.out.println("===========");
		// 1 ~ 10 까지중에 홀수만 출력
		for (int i = 1; i <= 10; i++) {
			if (i % 2 != 0) {
				System.out.println(i);
			}
		}

		System.out.println("===========");
		// 1 ~ 10 홀수
		for (int i = 1; i <= 10; i += 2) {
			System.out.println(i);
		}

		System.out.println("===========");
		// 1 ~ 5까지 합
		int sum = 0;
		for (int i = 1; i <= 5; i++) {
			sum += i;
		}
		System.out.println("합계 : " + sum);

		System.out.println("===========");
		// 정수를 입력받아 그 수만큼 숫자 출력
		Scanner sc = new Scanner(System.in);
		System.out.println("정수 하나를 입력해주세요");
		int num = sc.nextInt();
		
		for (int i = 1; i <= num; i++) {
			System.out.print(i + " ");
		}
		
		System.out.println("===========");
		// 배열 Array : 여러 개의 값을 한 번에 저장한 변수. 인덱스를 가짐
		// 한 번 크기를 정하면 변경할 수 없고 같은 자료형만 저장 가능
		// 자료형[] 배열명 = {};, 자료형[] 배열명 = new 자료형[크기];
		// 읽는 방식 : 배열명[인덱스번호]
		int[] nums = {3,5,7,9};
		for (int i = 0; i < nums.length; i++) {
			System.out.println(nums[i]);
		}
	}

}
