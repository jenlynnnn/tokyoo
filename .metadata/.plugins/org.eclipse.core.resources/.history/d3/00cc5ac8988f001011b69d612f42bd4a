package ch2;

/*
 * for 반복문
 * 정해진 조건만큼 반복
 * 
 * for(초기값; 조건식; 증강값) {
 * 	실행문;
 * }
 * 
 * 
 * */

public class ForEx1 {

	public static void main(String[] args) {

		// 1 ~ 5까지 출력
		// i++ : 후위증가 연산자
		// ++i : 전위증가 연산자
		// --i : 전위감소 연산자
		for (int i = 1; i <= 5; i++) {
			System.out.println(i);
		}

		System.out.println("===========");

		for (int i = 0; i < 3; i++) {
			System.out.println("home");
		}

		System.out.println("===========");
		// 10 ~ 1 까지 거꾸로 출력
		for (int i = 10; i >= 1; i--) {
			System.out.println(i);
		}

		System.out.println("===========");
		// 1 ~ 10 까지중에 홀수만 출력
		for (int i = 1; i <= 10; i++) {
			if (i % 2 != 0) {
				System.out.println(i);
			}
		}

		System.out.println("===========");
		// 1 ~ 10 까지중에 홀수만 출력
		for (int i = 1; i <= 10; i++) {
			System.out.println(i);
		}
	}

}
