package ch2;

import java.util.Scanner;

/*
 * for 반복문
 * 정해진 조건만큼 반복
 * 
 * for(초기값; 조건식; 증강값) {
 * 	실행문;
 * }
 * 
 * 
 * */

public class ForEx1 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		// 1 ~ 5까지 출력
		// i++ : 후위증가 연산자
		// ++i : 전위증가 연산자
		// --i : 전위감소 연산자
		for (int i = 1; i <= 5; i++) {
			System.out.println(i);
		}

		System.out.println("===========");

		for (int i = 0; i < 3; i++) {
			System.out.println("home");
		}

		System.out.println("===========");
		// 10 ~ 1 까지 거꾸로 출력
		for (int i = 10; i >= 1; i--) {
			System.out.println(i);
		}

		System.out.println("===========");
		// 1 ~ 10 까지중에 홀수만 출력
		for (int i = 1; i <= 10; i++) {
			if (i % 2 != 0) {
				System.out.println(i);
			}
		}

		System.out.println("===========");
		// 1 ~ 10 홀수
		for (int i = 1; i <= 10; i += 2) {
			System.out.println(i);
		}

		System.out.println("===========");
		// 1 ~ 5까지 합
		int sum = 0;
		for (int i = 1; i <= 5; i++) {
			sum += i;
		}
		System.out.println(sum);

		// #9 피자 조각 개수와 사람 수
		System.out.println("피자 조각 수와 사람 수를 입력 해주세요. :");
		int pizza = sc.nextInt();
		int member = sc.nextInt();
		System.out.println("한 사람 당 " + pizza / member + "조각씩 먹을 수 있습니다.");
		System.out.println("남는 조각은 " + pizza % member + "입니다.");
	}

}
