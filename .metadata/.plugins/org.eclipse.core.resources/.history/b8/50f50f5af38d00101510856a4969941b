package ch1;

// 한 줄 주석
/*
 * 여러줄 주석
 * 
 * 변수랑?
 * 데이터를 저장하는 그릇
 * 다양한 데이터를 담을 수 있음
 * 
 * 자료형이란?
 * 데이터 타입은 변수에 담을 값의 종류
 * */
public class Basic2 {

	public static void main(String[] args) {
		// int : 정수
		int age = -20;
		
		System.out.println(30);
		System.out.println(age);
		System.out.println("age");
		
		System.out.println("=========");
		
		// double : 실수
		double weight = -42.1234;
		
		System.out.println(weight);
		System.out.println((double)11.22);
		
		System.out.println("=========");

		// String : 문자열
		String name = "1";
		System.out.println(name);
		System.out.println("name");
 		
		// boolean : 참/거짓 (true, false)
		boolean isPretty = true;
		System.out.println(isPretty);
	}

}
