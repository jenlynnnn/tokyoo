package Exam;

import java.util.Iterator;
import java.util.Scanner;

public class day2Ex02 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		// #1
		System.out.println("치킨 수를 입력하세요. : ");
		int c = sc.nextInt();
		for(int i = 1; i <= c; i++) System.out.println("치킨 "+ i + "마리 주문이요");
 		
		
		// #2
		System.out.println("스쿼트 몇 번 할까요?");
		int squat = sc.nextInt();
		for(int i = 1; i <= squat; i++) System.out.println("스쿼트 "+ i + "회 완료");
		System.out.println("오운완");
		
		// #3
		System.out.println("숫자를 입력하세요. : ");
		int en = sc.nextInt();
		for (int i = 2; i <= en; i += 2) {
			System.out.println(i);
		}
		
	}

}
