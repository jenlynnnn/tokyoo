package exam;
// day1 과제
public class Exam1 {

	public static void main(String[] args) {
		
		int apple = 12;
		System.out.println("#1 " + "apple = " + apple);
		
		int year = 2025;
		System.out.println("#2 " + "year = " + year);
		
		int money = -1000;
		System.out.println("#3 " + "money = " + money);
		
		double length = 9.8;
		System.out.println("#4 " + "length = " + length);
		
		double score = 88.5;
		System.out.println("#5 " + "score = " + score);
		
		double minusValue = -4.6;
		System.out.println("#6 " + "minusValue = " + minusValue);
		
		String food = "떡볶이";
		System.out.println("#7 " + "food = " + food);
		
		String city = "서울";
		System.out.println("#8 " + "city = " + city);
		
		String hobby = "코딩";
		System.out.println("#9 " + "hobby = " + hobby);
		
		boolean hasCar = false;
		System.out.println("#10 " + "hasCar = " + hasCar);
		
		boolean isStudent = true;
		System.out.println("#11 " + "isStudent = " + isStudent);
		
		boolean isWeekend = false;
		System.out.println("#12 " + "isWeekend = " + isWeekend);
		
		int a = 10, b = 3;
		System.out.println("#1 " + "a + b = " + (a + b));
		System.out.println("#1 " + "a - b = " + (a - b));
		System.out.println("#1 " + "a * b = " + (a * b));
		System.out.println("#1 " + "a / b = " + (a / b));
		System.out.println("#1 " + "a % b = " + (a % b));
		
		int sum = 12 + 8;
		System.out.println("#2 " + "12 + 8 = " + sum);
		
		int total = 20 / 3;
		System.out.println("#3 " + "20 + 3 = " + total);
		
		int mod = 14 / 5; 
		System.out.println("#4 " + "14 + 5 = " + mod);
		
		System.out.println("#5 " + "5 % 5 = " + (5 % 5)); // 5 를 5로 나눈 나머지 값이 0이어서 0출력
		System.out.println("#6 " + "5 % 4 = " + (5 % 4)); // 5 를 4로 나눈 나머지 값이 1이어서 1출력
		System.out.println("#7 " + "5 % 3 = " + (5 % 3)); // 5 를 3로 나눈 나머지 값이 2이어서 2출력
		System.out.println("#8 " + "5 % 2 = " + (5 % 2)); // 5 를 2로 나눈 나머지 값이 1이어서 1출력
		System.out.println("#9 " + "5 % 1 = " + (5 % 1)); // 5 를 1로 나눈 나머지 값이 0이어서 0출력
		System.out.println("#10 " + "5 % 7 = " + (5 % 7)); // 5 를 7로 나눈 나머지 값이 5이어서 5출력
//		System.out.println("#11 " + "5 % 0 = " + (5 % 0)); // 정수형을 0으로 나누는 것이 불가능 하여 ArithmeticException 발생
		
		
		boolean result1;
		if (15 > 20) {
			result1 = true;
		} else {
			result1 = false;
		}
		System.out.println("#12 " + "(15 > 20) = " + result1);
		
		boolean result2;
		if (10 == 10) {
			result2 = true;
		} else {
			result2 = false;
		}
		System.out.println("#13 " + "(10 == 10) = " + result2);
		
		
		boolean result3;
		if (7 <= 3) {
			result3 = true;
		} else {
			result3 = false;
		}
		System.out.println("#14 " + "(7 <= 3) = " + result3);
		
		a = 5; b = 7;
		boolean isSame = a == b;
		boolean isDiff = (a != b);
		boolean isBig = a > b; 
		boolean isSmall = a > b; 
		boolean isLt = (a >= b); 
		boolean isRt = (a <= b);
		System.out.println("#15 " + "(a == b) = "  + isSame);
		System.out.println("#15 " + "(a != b) = "  + isDiff);
		System.out.println("#15 " + " a > b) = "  + isBig);
		System.out.println("#15 " + "( a > b) = "  + isSmall);
		System.out.println("#15 " + "((a >= b) = "  + isLt);
		System.out.println("#15 " + "(a <= b) = "  + isRt);
		
		boolean logic1 = (10 > 5) && (2 > 1);
		boolean logic2 = (3 >= 7) || (6 > 2);
		boolean logic3 = 8 != 8;
		System.out.println("#16 " + "(10 > 5) && (2 > 1) = "  + logic1);
		System.out.println("#17 " + "(3 >= 7) || (6 > 2) = "  + logic2);
		System.out.println("#18 " + "8 != 8 = "  + logic3);
		
		boolean x = true, y = false;
		boolean out1 = (true) && (false);
		boolean out2 = (true) || (false);
		boolean out3 = !(true);
		boolean out4 = !(false);
		System.out.println("#19 " + "(true) && (false) = " + out1);
		System.out.println("#19 " + "(true) || (false) = " + out2);
		System.out.println("#19 " + "!(true) = " + out3);
		System.out.println("#19 " + "!(false) = " + out4);
		
	}

}
